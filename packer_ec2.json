{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-d05e75b8",
      "instance_type": "c3.large",
      "ssh_username": "ubuntu",
      "ssh_timeout": "10m",
      "ssh_pty" : true,
      "ami_name": "Ajenti 1.2.22.24 and Agenti-V 0.2.52 {{timestamp}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "bootstrap.sh"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "cookbooks",
        "site-cookbooks"
      ],
      "run_list" : [
        "recipe[apt::default]",
        "recipe[build-essential::default]",
        "recipe[lw1_agenti::default]"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "cleanup.sh"
      ]
    }
  ]
}
